# Root environment variables used by docker-compose.yml
# Copy to .env and fill in values.

# Postgres container credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=attendance_db

# App settings
NODE_ENV=development
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d
FRONTEND_URL=http://localhost:5173

# Database connection for local development (backend uses these when running outside Docker)
DB_HOST=localhost
DB_PORT=5435
DB_NAME=attendance_db
DB_USER=postgres
DB_PASSWORD=change_me

# Prisma/Backend DATABASE_URL (for migrations/seeds)
DATABASE_URL=postgresql://postgres:change_me@localhost:5435/attendance_db

# Note:
# - Local (non-docker) backend can use DB_HOST=localhost and DB_PORT=5435.
# - Docker containers should use DB_HOST=postgres and DB_PORT=5432 (service networking).
# - On Vercel, FRONTEND_URL is optional: backend can fall back to https://${VERCEL_URL}.
